# RunPod Manager Configuration for Ashoka Project
# This matches the configuration shown in the pod screenshots

# Docker Image Configuration
IMAGE_NAME_BASE=nvidia/cuda:12.1.0-base-ubuntu22.04

# GPU and Resource Configuration
MAX_GPU_PRICE=0.50
CONTAINER_DISK=20
GPU_COUNT=1

# Network Volume Configuration (replace with your actual volume ID)
NETWORK_VOLUME_ID=ipy89pj504
VOLUME_MOUNT_PATH=/workspace

# Pod Configuration
SUPPORT_PUBLIC_IP=true
START_SSH=true
INACTIVITY_TIMEOUT_SECONDS=3600
